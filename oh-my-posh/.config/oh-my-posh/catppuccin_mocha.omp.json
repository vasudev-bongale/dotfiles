{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "pink": "#f5c2e7",
    "lavender": "#b4befe",
    "rosewater": "#f5e0dc",
    "teal": "#94e2d5",
    "peach": "#fab387",
    "overlay": "#6c7086",
    "green": "#a6e3a1",
    "red": "#f38ba8"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "p:rosewater",
          "style": "plain",
          "template": "{{ .CurrentDate | date .Format }} ",
          "type": "time",
          "options": {
            "time_format": "3:04 PM"
          }
        },
        {
          "foreground": "p:pink",
          "style": "plain",
          "template": "{{ .Path }} ",
          "type": "path",
          "options": {
            "home_icon": "~",
            "style": "agnoster_short",
            "max_depth": 3
          }
        },
        {
          "foreground": "p:lavender",
          "style": "plain",
          "template": "{{ .HEAD }} ",
          "type": "git",
          "options": {
            "branch_icon": "\ue725 ",
            "fetch_status": false,
            "fetch_upstream_icon": false
          }
        },
        {
          "foreground": "p:teal",
          "style": "plain",
          "template": "\udb84\udcfe {{ .Context }}{{ if .Namespace }}:{{ .Namespace }}{{ end }} ",
          "type": "kubectl"
        },
        {
          "foreground": "p:peach",
          "style": "plain",
          "template": "\uf252 {{ .FormattedMs }} ",
          "type": "executiontime",
          "options": {
            "threshold": 2000,
            "style": "roundrock"
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "p:green",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:red{{ end }}"
          ],
          "style": "plain",
          "template": "❯",
          "type": "status",
          "options": {
            "always_enabled": true
          }
        }
      ],
      "type": "prompt",
      "newline": true
    }
  ],
  "final_space": true,
  "secondary_prompt": {
    "foreground": "p:overlay",
    "template": "❯❯ "
  },
  "version": 4
}
