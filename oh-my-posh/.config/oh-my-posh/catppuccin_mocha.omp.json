{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "pink": "#f5c2e7",
    "lavender": "#b4befe",
    "rosewater": "#f5e0dc",
    "teal": "#94e2d5",
    "peach": "#fab387",
    "overlay": "#6c7086",
    "green": "#a6e3a1",
    "red": "#f38ba8"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "p:overlay",
          "style": "plain",
          "template": "\u256d\u2500",
          "type": "text"
        },
        {
          "foreground": "p:teal",
          "style": "plain",
          "template": "\udb84\udcfe {{ .Context }}{{ if .Namespace }}:{{ .Namespace }}{{ end }} ",
          "type": "kubectl"
        },
        {
          "foreground": "p:pink",
          "style": "plain",
          "template": "\uf07c {{ .Path }} ",
          "type": "path",
          "options": {
            "home_icon": "\uf015 ",
            "style": "agnoster_short",
            "max_depth": 3
          }
        },
        {
          "foreground": "p:lavender",
          "style": "plain",
          "template": "\ue725 {{ .HEAD }}{{ if .Working.Changed }} \uf040 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "type": "git",
          "options": {
            "branch_icon": "",
            "fetch_status": true,
            "fetch_upstream_icon": false
          }
        },
        {
          "foreground": "p:peach",
          "style": "plain",
          "template": "\uf253 {{ .FormattedMs }} ",
          "type": "executiontime",
          "options": {
            "threshold": 2000,
            "style": "roundrock"
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "overflow": "hide",
      "segments": [
        {
          "foreground": "p:overlay",
          "style": "plain",
          "template": "\uf073  {{ .CurrentDate | date .Format }}",
          "type": "time",
          "options": {
            "time_format": "Mon Jan 2"
          }
        },
        {
          "foreground": "p:overlay",
          "style": "plain",
          "template": "  \uf017  {{ .CurrentDate | date .Format }}",
          "type": "time",
          "options": {
            "time_format": "3:04 PM"
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "p:overlay",
          "style": "plain",
          "template": "\u2570\u2500",
          "type": "text"
        },
        {
          "foreground": "p:green",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:red{{ end }}"
          ],
          "style": "plain",
          "template": "❯",
          "type": "status",
          "options": {
            "always_enabled": true
          }
        }
      ],
      "type": "prompt",
      "newline": true
    }
  ],
  "final_space": true,
  "secondary_prompt": {
    "foreground": "p:overlay",
    "template": "❯❯ "
  },
  "version": 4
}
